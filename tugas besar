		cout<<"=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-"<<endl;
		cout<<" Pilih Menu : ";
		cin>>pilih; 
		cout<<"=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-"<<endl;
		cout<<endl;
		

		switch(pilih){
			case 0:
				cout<<"Keluar"<<endl;
				break;
			case 1: main1();break;
			case 2: main2();break;
			case 3: main3();break;
			
			default:
				cout<<"Menu Tidak Tersedia";
		}
		system("pause");
	}while(pilih != 0);
