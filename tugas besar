					cout<<endl;
					cout<<"Daftar Layanan Rawat"<<endl;
					cout<<"1. Pelayanan rawat jalan"<<endl;
						cout<<"2. Pelayanan gawat darurat"<<endl;
							cout<<"3. Pelayanan satu hari"<<endl;
								cout<<"4. Rawat Inap"<<endl;
									cout<<"5. Home care"<<endl;
